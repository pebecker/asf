<asf xmlversion="1.0">
	<select-by-device id="sam.drivers.trng.example" caption="TRNG Example">
		<module type="application" id="sam.drivers.trng.example#0" caption="TRNG Example">
			<info type="description" value="summary">
			This example demonstrates the True Random Number Generator (TRNG) provided on SAM3X microcontrollers. It enables the user to set an alarm and watch it being triggered when the timer reaches the corresponding value.
			</info>
			<build type="c-source" value="trng_example.c"/>
			<build type="include-path" value="."/>
			<device-support value="sam3x"/>
			<require idref="sam.utils.cmsis.sam3x.source.template"/>
			<require idref="sam.drivers.trng"/>
			<require idref="sam.drivers.pmc"/>
			<require idref="sam.drivers.pio"/>
			<require idref="sam.drivers.uart"/>
			<require idref="common.services.basic.clock"/>
			<require idref="common.utils.stdio.stdio_serial"/>
			<info type="gui-flag" value="move-to-root"/>
		</module>
	</select-by-device>
</asf>
