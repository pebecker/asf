<asf xmlversion="1.0">
	<module type="application" id="avr32.drivers.pdca.example" caption="PDCA Example">
		<info type="description" value="summary">
		Interrupt-based PDCA transfer of an ASCII animation stored in internal flash to a USART output.
		</info>
		<info type="keyword" value="technology">
			<keyword value="DMA Controller"/>
			<keyword value="Memory"/>
		</info>
		<build type="include-path" value="."/>
		<build type="header-file" value="ascii_anim1.h"/>
		<build type="header-file" value="ascii_anim2.h"/>
		<build type="header-file" value="conf_sleepmgr.h"/>
		<build type="c-source" value="pdca_example.c"/>
		<device-support value="uc3a"/>
		<device-support value="uc3b"/>
		<device-support value="uc3a3_a4"/>
		<device-support value="uc3c"/>
		<device-support value="uc3d"/>
		<device-support value="uc3l"/>
		<require idref="avr32.drivers.gpio"/>
		<require idref="avr32.drivers.pdca"/>
		<require idref="avr32.drivers.pm"/>
		<require idref="avr32.drivers.usart"/>
		<require idref="common.services.basic.sleepmgr"/>
		<require idref="common.services.basic.clock"/>
		<info type="gui-flag" value="move-to-root"/>
	</module>
</asf>
